<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<h5>Comments:</h5>
  <% @user.comments.each do |comment| %>
    <%= @user.name %> said: [
    <%= comment.content %> ] on publication
    <%= link_to comment.publication.title, publication_path(comment.publication) %>
    <br>
  <% end %>
<br>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
